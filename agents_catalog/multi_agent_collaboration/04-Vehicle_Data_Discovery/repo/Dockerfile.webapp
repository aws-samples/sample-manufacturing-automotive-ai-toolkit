# Fleet Discovery - API + Frontend
FROM public.ecr.aws/docker/library/node:20-slim AS frontend-build
ARG COGNITO_USER_POOL_ID
ARG COGNITO_CLIENT_ID
ARG AWS_REGION=us-west-2
ENV NEXT_PUBLIC_COGNITO_USER_POOL_ID=$COGNITO_USER_POOL_ID
ENV NEXT_PUBLIC_COGNITO_CLIENT_ID=$COGNITO_CLIENT_ID
ENV NEXT_PUBLIC_AWS_REGION=$AWS_REGION
WORKDIR /frontend
COPY frontend/fleet-discovery-studio/package*.json ./
RUN npm install
COPY frontend/fleet-discovery-studio/ ./
RUN npm run build

FROM public.ecr.aws/docker/library/python:3.9-slim
ENV PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y \
    build-essential gcc g++ python3-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY web-api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY web-api/*.py ./
COPY --from=frontend-build /frontend/out ./static

EXPOSE 8000
CMD ["uvicorn", "dashboard_api:app", "--host", "0.0.0.0", "--port", "8000"]
