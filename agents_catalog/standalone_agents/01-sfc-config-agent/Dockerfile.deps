# System dependencies for SFC Config Agent
# These commands are injected into the generated Dockerfile at build time
# by scripts/build_launch_agentcore.py (convention: Dockerfile.deps)

RUN apt-get update && \
    apt-get install -y --no-install-recommends git wget gpg && \
    wget -O - https://apt.corretto.aws/corretto.key | gpg --dearmor -o /usr/share/keyrings/corretto-keyring.gpg && \
    echo 'deb [signed-by=/usr/share/keyrings/corretto-keyring.gpg] https://apt.corretto.aws stable main' | tee /etc/apt/sources.list.d/corretto.list && \
    apt-get update && \
    apt-get install -y --no-install-recommends java-11-amazon-corretto-jdk && \
    apt-get clean && rm -rf /var/lib/apt/lists/*